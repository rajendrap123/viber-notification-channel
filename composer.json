{
    "name": "laravel-notification-channels/viber",
    "description": "This is Viber Notification Channel Package",
    "homepage": "https://github.com/laravel-notification-channels/viber",
    "license": "MIT",
    "authors": [
        {
            "name": "Rajendra Poudel",
            "email": "me@rajendrapoudel.com.np",
            "homepage": "https://rajendrapoudel.com.np",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.2",
        "illuminate/notifications": "~5.5 || ~6.0 || ~7.0",
        "illuminate/support": "~5.5 || ~6.0 || ~7.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "NotificationChannels\\Viber\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NotificationChannels\\Viber\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    }
}
